<!-- Edit data user form: username, email, password, avatar -->
<%= form_with model: @user, url: profile_path, method: :patch, local: true do |form| %>
  <div class="flex flex-col">
    <div class="flex flex-col">
      <%= form.label :username %>
      <%= form.text_field :username, class: 'border border-gray-300 rounded-md p-2' %>
    </div>
    <div class="flex flex-col">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'border border-gray-300 rounded-md p-2' %>
    </div>
    <div class="flex flex-col">
      <%= form.label :password %>
      <%= form.password_field :password, class: 'border border-gray-300 rounded-md p-2' %>
    </div>
    <div class="flex flex-col">
      <%= form.label :avatar %>
      <%= form.file_field :avatar, class: 'border border-gray-300 rounded-md p-2' %>
    </div>
    <div class="flex flex-col">
      <%= form.submit 'Actualizar', class: 'bg-blue-500 text-white rounded-md p-2' %>
    </div>
  </div>
<% end %>
