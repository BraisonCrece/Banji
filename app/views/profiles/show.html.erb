<section class="flex my-6 mx-4">
  <%= image_tag @user.avatar, class: 'rounded-full w-20 h-20 object-cover' if @user.avatar.attached? %>
  <%= image_tag 'default_avatar.png', class: 'rounded-full w-20 h-20 object-cover' unless @user.avatar.attached? %>
  <div class="flex flex-col ml-4 justify-evenly">
    <span><span class="font-bold">Username</span>: <%= @user.username %></span>
    <span><span class="font-bold">Email</span>: <%= @user.email %></span>
  </div>
</section>
<!-- Link (with turbo-frame) to show the user's products -->
<div class="flex justify-center gap-2 mb-3">
  <%= link_to 'Mis productos', products_path(user_id: @user), class: 'text-black px-3 py-2 border-[1px] border-gray-500 bg-blue-200 rounded', data: { turbo_frame: 'products'} %>
  <%= link_to 'Mis favoritos', products_path(favorite: true), class: 'text-black px-3 py-2 border-[1px] border-gray-500 bg-blue-200 rounded', data: { turbo_frame: 'products'} %>
</div>
<%= turbo_frame_tag 'products' %>
